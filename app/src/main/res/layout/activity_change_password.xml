<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6f6f6"
    android:orientation="vertical">

    <love.wintrue.com.lovestaff.widget.actionbar.CommonActionBar
        android:id="@+id/title_actionbar_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimension_15">

        <LinearLayout
            android:id="@+id/ll_changePwd_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rl_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimension_58"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pwd_title"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimension_15"
                    android:text="原密码"
                    android:textColor="@color/color_242424"
                    android:textSize="@dimen/dimension_16" />

                <love.wintrue.com.lovestaff.widget.ClearEditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimension_20"
                    android:layout_toLeftOf="@+id/iv_pwd_visible"
                    android:layout_toRightOf="@+id/tv_pwd_title"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="请输入原密码"
                    android:inputType="textPassword"
                    android:textColor="@color/color_242424"
                    android:textColorHint="@color/color_969696"
                    android:textSize="@dimen/dimension_14" />

                <ImageView
                    android:id="@+id/iv_pwd_visible"
                    android:layout_width="@dimen/dimension_20"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimension_15"
                    android:src="@mipmap/icon_yj_gb" />
            </RelativeLayout>

            <love.wintrue.com.lovestaff.widget.StateButton
                android:id="@+id/btn_change_pwd_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimension_44"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/btn_register"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dimension_15"
                android:layout_marginRight="@dimen/dimension_15"
                android:layout_marginTop="@dimen/dimension_58"
                android:background="@null"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="下一步"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimension_16"
                app:normalBackgroundColor="@color/color_31b3ef"
                app:pressedBackgroundColor="@color/color_969696"
                app:sb_radius="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_changePwd_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimension_58"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_setpwd_title"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimension_15"
                    android:text="设置密码"
                    android:textColor="@color/color_242424"
                    android:textSize="@dimen/dimension_16" />

                <love.wintrue.com.lovestaff.widget.ClearEditText
                    android:id="@+id/et_setpwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimension_20"
                    android:layout_toLeftOf="@+id/iv_setpwd_visible"
                    android:layout_toRightOf="@+id/tv_setpwd_title"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="请设置登录密码"
                    android:inputType="textPassword"
                    android:textColor="@color/color_242424"
                    android:textColorHint="@color/color_969696"
                    android:textSize="@dimen/dimension_14" />

                <ImageView
                    android:id="@+id/iv_setpwd_visible"
                    android:layout_width="@dimen/dimension_20"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimension_15"
                    android:src="@mipmap/icon_yj_gb" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dimension_15"
                android:layout_marginRight="@dimen/dimension_15"
                android:background="@color/line_color_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimension_58"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_confirmpwd_title"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimension_15"
                    android:text="确认密码"
                    android:textColor="@color/color_242424"
                    android:textSize="@dimen/dimension_16" />

                <love.wintrue.com.lovestaff.widget.ClearEditText
                    android:id="@+id/et_confirmpwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimension_20"
                    android:layout_toRightOf="@+id/tv_confirmpwd_title"
                    android:background="@null"
                    android:drawablePadding="10dp"
                    android:gravity="left|center_vertical"
                    android:hint="请再次输入登录密码"
                    android:inputType="textPassword"
                    android:textColor="@color/color_242424"
                    android:textColorHint="@color/color_969696"
                    android:textSize="@dimen/dimension_14" />
            </RelativeLayout>

            <love.wintrue.com.lovestaff.widget.StateButton
                android:id="@+id/btn_changePwd_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimension_44"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/btn_register"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dimension_15"
                android:layout_marginRight="@dimen/dimension_15"
                android:layout_marginTop="@dimen/dimension_58"
                android:background="@null"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="确定"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimension_16"
                app:normalBackgroundColor="@color/color_31b3ef"
                app:pressedBackgroundColor="@color/color_969696"
                app:sb_radius="5dp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>