<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f6f6f6"
    android:orientation="vertical">

    <love.wintrue.com.lovestaff.widget.actionbar.CommonActionBar
        android:id="@+id/title_actionbar_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_contact_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_58"
        android:layout_marginTop="@dimen/dimension_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimension_15"
            android:layout_marginRight="@dimen/dimension_15"
            android:background="@color/line_color_1" />

        <TextView
            android:id="@+id/tv_contact_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimension_15"
            android:text="姓名"
            android:textColor="@color/color_242424"
            android:textSize="@dimen/dimension_16" />

        <love.wintrue.com.lovestaff.widget.ClearEditText
            android:id="@+id/et_contact_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimension_20"
            android:layout_toRightOf="@+id/tv_contact_name_title"
            android:background="@null"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:hint="请输入姓名"
            android:inputType="text"
            android:textColor="@color/color_242424"
            android:textColorHint="@color/color_969696"
            android:textSize="@dimen/dimension_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_avatar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_58"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_avatar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimension_15"
            android:text="头像"
            android:textColor="@color/color_242424"
            android:textSize="@dimen/dimension_16" />

        <love.wintrue.com.lovestaff.widget.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dimension_34"
            android:layout_height="@dimen/dimension_34"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimension_10"
            android:layout_toLeftOf="@+id/iv_next"
            android:src="@mipmap/img_user_default" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="@dimen/dimension_14"
            android:layout_height="@dimen/dimension_14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimension_19"
            android:src="@mipmap/icon_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_contact_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_58"
        android:layout_marginTop="@dimen/dimension_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimension_15"
            android:layout_marginRight="@dimen/dimension_15"
            android:background="@color/line_color_1" />

        <TextView
            android:id="@+id/tv_contact_phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimension_15"
            android:text="电话"
            android:textColor="@color/color_242424"
            android:textSize="@dimen/dimension_16" />

        <love.wintrue.com.lovestaff.widget.ClearEditText
            android:id="@+id/et_contact_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimension_20"
            android:layout_toRightOf="@+id/tv_contact_phone_title"
            android:background="@null"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:hint="请输入电话号码"
            android:inputType="text"
            android:textColor="@color/color_242424"
            android:textColorHint="@color/color_969696"
            android:textSize="@dimen/dimension_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_company_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_58"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimension_15"
            android:layout_marginRight="@dimen/dimension_15"
            android:background="@color/line_color_1" />

        <TextView
            android:id="@+id/tv_company_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimension_15"
            android:text="公司"
            android:textColor="@color/color_242424"
            android:textSize="@dimen/dimension_16" />

        <love.wintrue.com.lovestaff.widget.ClearEditText
            android:id="@+id/et_company_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimension_20"
            android:layout_toRightOf="@+id/tv_company_name_title"
            android:background="@null"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:hint="请输入公司名称"
            android:inputType="text"
            android:textColor="@color/color_242424"
            android:textColorHint="@color/color_969696"
            android:textSize="@dimen/dimension_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_job"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_58"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimension_15"
            android:layout_marginRight="@dimen/dimension_15"
            android:background="@color/line_color_1" />

        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimension_15"
            android:text="职位"
            android:textColor="@color/color_242424"
            android:textSize="@dimen/dimension_16" />

        <love.wintrue.com.lovestaff.widget.ClearEditText
            android:id="@+id/et_job"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimension_20"
            android:layout_toRightOf="@+id/tv_job_title"
            android:background="@null"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:hint="请输入职位"
            android:inputType="text"
            android:textColor="@color/color_242424"
            android:textColorHint="@color/color_969696"
            android:textSize="@dimen/dimension_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_58"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dimension_15"
            android:layout_marginRight="@dimen/dimension_15"
            android:background="@color/line_color_1" />

        <TextView
            android:id="@+id/tv_email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimension_15"
            android:text="邮箱"
            android:textColor="@color/color_242424"
            android:textSize="@dimen/dimension_16" />

        <love.wintrue.com.lovestaff.widget.ClearEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimension_20"
            android:layout_toRightOf="@+id/tv_email_title"
            android:background="@null"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:hint="请输入邮箱"
            android:inputType="text"
            android:textColor="@color/color_242424"
            android:textColorHint="@color/color_969696"
            android:textSize="@dimen/dimension_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_58"
        android:layout_marginTop="@dimen/dimension_50"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimension_15"
            android:text="名片自动保存到通讯录"
            android:textColor="@color/color_242424"
            android:textSize="@dimen/dimension_16" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:checked="true"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            app:kswBackDrawable="@drawable/btn_back_drawable"
            app:kswThumbColor="@color/white" />
    </RelativeLayout>
</LinearLayout>