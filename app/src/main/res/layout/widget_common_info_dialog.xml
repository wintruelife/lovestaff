<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round_bg_3"
    android:gravity="center_horizontal"
    android:padding="15dp"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/common_info_dialog_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/common_info_dialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_size_max"
            android:textColor="@color/color_333333"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="弹出框标题"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="15dp"
            android:background="@color/line_color_1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/common_info_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/txt_size_big"
        android:text="弹出框信息内容"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/common_info_dialog_cancel"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_size_big"
            android:maxLines="1"
            android:text="取消"
            android:background="@drawable/gray_round_bg_1" />

        <TextView
            android:id="@+id/common_info_dialog_ok"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:maxLines="1"
            android:textColor="@color/color_f23030"
            android:textSize="@dimen/txt_size_big"
            android:text="确定"
            android:background="@drawable/red_round_bg_1" />
    </LinearLayout>

</LinearLayout>